<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/styles.css" />
    <title>Handiblog admin</title>
  </head>
  <body>
    <header class="bg-primary text-white py-3">
      <h1 class="text-center mb-4">Handiblog Admin</h1>
    </header>
    <div class="container mt-5">
      <h2 class="mt-5 text-center">Formulaire d'ajout d'un article</h2>
      <form
        action="/add"
        method="post"
        class="bg-white p-4 rounded shadow-sm w-75 m-auto"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Titre de l'article :</label>
          <input type="text" name="title" class="form-control" required />
        </div>
        <div class="mb-3">
          <label for="type" class="form-label">Type de handicap :</label>
          <input type="text" name="type" class="form-control" required />
        </div>
        <div class="mb-3">
          <label for="image" class="form-label"
            >Choisir une image pour l'article :</label
          >
          <input
            type="file"
            name="image"
            class="form-control"
            accept="image/png, image/jpeg, image/webp"
            required
          />
        </div>
        <div class="mb-3">
          <label for="description" class="form-label"
            >Description (50 caract√®res max) :</label
          >
          <input
            type="text"
            name="description"
            class="form-control"
            maxlength="50"
            required
          />
        </div>
        <div class="mb-3">
          <label for="content" class="form-label">Contenu de l'article :</label>
          <textarea
            name="content"
            class="form-control"
            rows="5"
            required
          ></textarea>
        </div>
        <button type="submit" class="btn btn-primary w-100">
          Ajouter l'article
        </button>
      </form>

      <h2 class="mt-5 text-center">Liste des articles</h2>
      <table class="table table-striped table-bordered mt-3">
        <thead class="table-dark">
          <tr>
            <th>Titre</th>
            <th>Type</th>
            <th>Image</th>
            <th>Description</th>
            <th>Contenu</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% articles.forEach(article => { %>
          <tr>
            <td><%= article.title %></td>
            <td><%= article.type %></td>
            <td><%= article.image.slice(0,10)+"..." %></td>
            <td><%= article.description.slice(0,30)+"..." %></td>
            <td><%= article.content.slice(0,50)+"..."%></td>
            <td>
              <form
                action="/admin/update/<%= article.id %>"
                method="POST"
                class="d-inline"
              >
                <button type="submit" class="btn btn-warning btn-sm">
                  Modifier
                </button>
              </form>
              <form
                action="/admin/delete/<%= article.id %>"
                method="POST"
                class="d-inline"
              >
                <button type="submit" class="btn btn-danger btn-sm">
                  Supprimer
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
